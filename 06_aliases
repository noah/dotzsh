# coreutils
# ls
alias ls="ls --color=auto"
alias la="ls -alhF --classify"
alias ll="ls -lhF --classify"
alias lc="ls -halt"
alias lsl="ls|less"
alias lcl="lc|less"
alias lsgrep="ls -a|grep -i"
alias hgrep="cat ~/.histfile| grep"
#
alias ..="cd .."
alias cp="cp -i"
alias df="df -kTh"
alias dtop='watch -n2 df -h'
alias mkdir="mkdir -p"
alias mv="mv -i"
alias rm="rm -i"
alias su-="su -"
alias chown="chown -v"
alias rmRf="rm -Rf"
alias egrep="egrep --colour=auto"

alias rmpyc='find . -iname "*.pyc" |xargs rm -fv'

# ssh
alias downbe="ssh -Y $(whoami)@downbe"
alias downbe.at="ssh -Y $(whoami)@downbe.at"
alias startsocks="sudo /etc/rc.d/sshd restart; ssh -c blowfish -C -D 11033 $(whoami)@127.0.0.1"
# vim
alias vimo="vim -o"
alias vimO="vim -O"
alias gvimo="gvim -o"
alias gvimO="gvim -O"
alias vimpass="pushd ~/gits/checkouts/mpass; git pull; vim ~/gits/checkouts/mpass/mpass.gpg; git commit -a; git push; popd"
alias va="vim ~/.zsh/06_aliases; source ~/.zsh/06_aliases"
alias vf="vim ~/.zsh/11_functions; source ~/.zsh/11_functions"
alias lock="xscreensaver-command -activate"
alias tree="tree -Csu"

# tmux
alias tmux="tmux -2"
alias ta="tmux attach || tmux"
alias tat='tmux attach -t'
alias tls='tmux ls'
alias tns='tmux new -s'

alias pkill9="pkill -9"
alias fontfamilies='otfinfo -a /usr/share/fonts/otf/*|less'

# vim: ft=zsh
