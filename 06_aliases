alias rid="bg; disown; exit"
alias xboard="xboard -ics -icshost freechess.org"
alias esq="ssh esq"

alias tags="vim ~/.config/awesome/tags.txt; awesomereset"
alias vimrc="vim ~/.vimrc"
alias vimrc.test="vim ~/.vimrc.test"
alias vimtest="vim -u ~/.vimrc.test"
